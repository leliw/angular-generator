<h1 mat-dialog-title>Row Action :: <strong>{{action}}</strong></h1>
<div mat-dialog-content class="dialog">
    <ng-tmplate *ngIf="action != 'Delete'; else elseTemplate">
#foreach($field in $fields.keySet())
        <div class="row">
            <div class="col">
                <mat-form-field>
                    <input placeholder="${field}" matInput [(ngModel)]="local_data.${field}">
                </mat-form-field>
            </div>
        </div>
#end      
        <div class="row">
            <div class="col">
                <mat-form-field>
                    <input placeholder="{{action}} oddziaÅ‚" matInput [(ngModel)]="local_data.branchId">
                </mat-form-field>
            </div>
        </div>
    </ng-tmplate>
    <ng-template #elseTemplate>
        Sure to delete <b>{{local_data.sufix}}</b>?
    </ng-template>
</div>
<div mat-dialog-actions>
    <button mat-button (click)="doAction()" mat-flat-button color="primary">{{action}}</button>
    <button mat-button (click)="closeDialog()" mat-flat-button color="warn">Cancel</button>
</div>